package com.library.gestion_prestamos.infrastructure.adapter.in.web;

import java.util.List;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.library.gestion_prestamos.domain.model.Book;
import com.library.gestion_prestamos.domain.ports.in.GetAvailableBooksUseCase;
import com.library.gestion_prestamos.domain.ports.in.GetBorrowedBooksUseCase;
import com.library.gestion_prestamos.domain.ports.in.UpdateBookUseCase;
import com.library.gestion_prestamos.infrastructure.adapter.in.web.dto.BookResponseDTO;

import lombok.RequiredArgsConstructor;

@RestController
@RequestMapping("/api/books")
@RequiredArgsConstructor
public class BookController {
    private final GetAvailableBooksUseCase getAvailableBooksUseCase;
    private final GetBorrowedBooksUseCase getBorrowedBooksUseCase;
    private final UpdateBookUseCase updateBookUseCase;

    @GetMapping("/available")
    public ResponseEntity<List<BookResponseDTO>> getAvailableBooks() {
        List<Book> books = getAvailableBooksUseCase.getAllAvailable();
        List<BookResponseDTO> response = books.stream()
                .map(BookResponseDTO::fromDomain)
                .toList();
        return ResponseEntity.ok(response);
    }

    @GetMapping("/borrowed")
    public ResponseEntity<List<BookResponseDTO>> getBorrowedBooks() {
        List<Book> books = getBorrowedBooksUseCase.getAllBorrowed();
        List<BookResponseDTO> response = books.stream()
                .map(BookResponseDTO::fromDomain)
                .toList();
        return ResponseEntity.ok(response);
    }

    @PostMapping("/{id}/loan")
    public ResponseEntity<Void> loanBook(@PathVariable Long id) {
        updateBookUseCase.updateBookAvailability(id, false);
        return ResponseEntity.ok().build();
    }

    @PostMapping("/{id}/return")
    public ResponseEntity<Void> returnBook(@PathVariable Long id) {
        updateBookUseCase.updateBookAvailability(id, true);
        return ResponseEntity.ok().build();
    }
}
